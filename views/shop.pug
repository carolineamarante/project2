extends layouts/main-layout.pug 

block styles 
        link(rel="stylesheet",href="/css/main.css")
        link(rel="stylesheet",href="/css/product.css")

block content
        main  
            if prods.length > 0 
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://images-na.ssl-images-amazon.com/images/I/61JerIqX15L.jpg", alt="Ô livro") 
                            div.card__content
                                h2.product__price $19.99
                                p.product__description Esse livro é sobre um livro que não sabia que era livro, ele leu um livro e viu que era um livro.
                            .card__actions
                                button.btn Add to Cartito
            else 
                h1 No produtito 4 u